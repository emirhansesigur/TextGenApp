{
  "Routes": [
    {
      // --- 1. VOCABULARY SERVİSİ ---
      // Gateway'e gelen "/gateway/vocabulary/..." isteğini yakalar
      "UpstreamPathTemplate": "/gateway/vocabulary/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],

      // İsteği asıl servisin olduğu "/api/..." adresine yönlendirir
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "vocabulary-service",
          "Port": 8080
        }
      ]
    },
    {
      // --- 2. TEXTGEN SERVİSİ ---
      // Gateway'e gelen "/gateway/textgen/..." isteğini yakalar
      "UpstreamPathTemplate": "/gateway/textgen/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],

      // İsteği asıl servisin olduğu "/api/..." adresine yönlendirir
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "textgen-service",
          "Port": 8080
        }
      ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5000" // Dış dünya buraya 5000'den gelecek
  }
}